@model  IPagedList<Book>

@{
  ViewBag.Title = "Offers";
}

  <table class="table table-bordered">
    <tr>
      <th>#</th>
      <th>Name</th>
      <th>Price</th>
      <th>Image</th>
      <th>Status</th>
      <th>Condition</th>
    </tr>
    @foreach (var item in Model)
    {
      <tr>
        <td>@Html.DisplayFor(modelItem => item.Id)</td>
        <td>
          @Html.ActionLink(item.Name, "Details", new { id = item.Id })
        </td>
        <td>$ @Html.DisplayFor(modelItem => item.Price)</td>
        <td>
          @if (item.Offered == true)
          {
            <h4 class="alert alert-success">Accepted</h4>
          }
          @if (item.Offered == false)
          {
            <h4 class="alert alert-danger">Rejected</h4>
          }
          @if (item.Offered == null)
          {
            <h4 class="alert alert-warning">In process</h4>
          }
        </td>
        <td>
          <a target="_blank" href="@Url.Content(item.CoverImagePath)">
            <img src="@Url.Content(item.CoverImagePath)?width=120&height=160&crop=auto" alt="Cannot display cover" />
          </a>
        </td>
        <td>@Html.DisplayFor(modelItem => item.Condition)</td>

      </tr>

    }
  </table>

  <p>
    @Html.PagedListPager(Model, page => Url.Action("Index", new { page, minPrice = ViewBag.MinPrice, maxPrice = ViewBag.MaxPrice, search = ViewBag.Search }))
  </p>

