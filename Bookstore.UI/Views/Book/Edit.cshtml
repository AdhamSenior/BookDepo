@model Book
@{
  ViewBag.Title = "Edit a book:";
}

<div class="jumbotron">
  @using (Html.BeginForm("Edit", "Book", FormMethod.Post, new { enctype = "multipart/form-data" }))
  {
    @Html.HiddenFor(m => m.Id)

    <div>BookName:</div>
    @Html.TextBoxFor(m => m.Name)
    @Html.ValidationMessageFor(m => m.Name)
    <div>BookPrice:</div>
    @Html.TextBoxFor(m => m.Price)
    @Html.ValidationMessageFor(m => m.Price)

    <div>Cover Image:</div>
    <input type="file" name="cover" />
    @Html.HiddenFor(m => m.CoverImagePath)

    <div>Authors:</div>
    @Html.TextBoxFor(m => m.Author)
    @Html.ValidationMessageFor(m => m.Author)
    <div>Description:</div>
    @Html.TextAreaFor(m => m.Discription)
    @Html.ValidationMessageFor(m => m.Discription)
    <div>Condition:</div>

    @Html.RadioButtonFor(model => model.Condition, "New")
    @Html.Label("New", "New")
    @Html.RadioButtonFor(model => model.Condition, "Used")
    @Html.Label("Used", "Used")

    <div>ISBN:</div>
    @Html.TextBoxFor(m => m.ISBN)
    <br />
    @Html.RadioButtonFor(model => model.Status, "false")
    @Html.Label("delete")
    @Html.RadioButtonFor(model => model.Status, "true")
    @Html.Label("recover")
    <br />
    <input type="submit" value="Edit" /> 
  }
</div>
