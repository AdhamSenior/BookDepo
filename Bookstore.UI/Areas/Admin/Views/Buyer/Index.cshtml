@model IEnumerable<Bookstore.UI.Models.ApplicationUser>

@{
  ViewBag.Title = "Buyers";
}

<table class="table table-bordered">
  <tr> 
    <th>
      Full Name
    </th>
    <th>
      Email
    </th> 
    <th></th>
  </tr>

  @foreach (var item in Model)
  {
    <tr> 
      <td>
        @Html.DisplayFor(modelItem => item.FullName)
      </td>
      <td>
        @Html.DisplayFor(modelItem => item.Email)
      </td> 
      <td> 
          @Html.ActionLink("Delete", "Delete", new { id = item.Id },new{@class="btn btn-danger", onclick = "return confirm('Want to delete?');" })
      </td>
    </tr>
  }

</table>
